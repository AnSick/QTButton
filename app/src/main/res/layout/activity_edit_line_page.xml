<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="qt.qtbutton.EditLinePage">

    <EditText
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_editProduct"
        android:layout_alignTop="@+id/et_editNumberOfProduct"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:singleLine="true" />

    <EditText
        android:id="@+id/et_editNumberOfProduct"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="@+id/et_editProduct"
        android:layout_toRightOf="@+id/et_editProduct"
        android:layout_toEndOf="@+id/et_editProduct"
        android:layout_alignTop="@+id/spinner_edit"
        android:singleLine="true" />

    <Spinner
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/spinner_edit"
        android:entries="@array/measure"
        android:layout_alignTop="@+id/btn_editLine"
        android:layout_alignParentLeft="@+id/et_editNumberOfProduct"
        android:layout_toRightOf="@+id/et_editNumberOfProduct"
        android:layout_toEndOf="@+id/et_editNumberOfProduct" />

    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="EDIT"
        android:id="@+id/btn_editLine"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onEditLine" />
</RelativeLayout>
